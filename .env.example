# API Keys and Environment Variables
# Copy this file to .env and fill in your actual values

# Google Sheets API (for data export)
GOOGLE_SHEETS_CREDENTIALS_PATH=credentials.json
GOOGLE_SHEETS_TOKEN_PATH=token.json

# Notion API (for CRM)
# Get your API key at: https://www.notion.so/my-integrations
NOTION_API_KEY=secret_xxxxx

# Notion Database IDs (32-character IDs from database URLs)
# Open each database in Notion, copy URL: notion.so/xxxxx?v=yyyyy
# The database ID is the xxxxx part (without dashes)
NOTION_GAMES_DB=xxxxx
NOTION_SCHOOLS_DB=xxxxx
NOTION_CONTACTS_DB=xxxxx
NOTION_TEMPLATES_DB=xxxxx
NOTION_EMAIL_QUEUE_DB=xxxxx

# SendGrid (for email automation)
# Get your API key at: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxx
FROM_EMAIL=outreach@livite.com
FROM_NAME=Livite Sports Catering

# Optional: Add delays between scraping requests (milliseconds)
SCRAPE_DELAY_MS=1000

# Academic year configuration (adjust as needed)
# Format: YYYY-MM-DD
ACADEMIC_YEAR_START_MONTH=8  # August
ACADEMIC_YEAR_END_MONTH=5    # May
